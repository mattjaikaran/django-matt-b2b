# =============================================================================
# Django Matt B2B - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment.
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
SECRET_KEY=change-me-to-a-secure-random-string-minimum-50-chars
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Environment: development, staging, production
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_NAME=django_matt_b2b
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Use SQLite for development (set to True if no PostgreSQL available)
USE_SQLITE=False

# Database connection pool (production)
# DB_CONN_MAX_AGE=60
# DB_CONN_HEALTH_CHECKS=True

# -----------------------------------------------------------------------------
# Redis (Caching & Background Tasks)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# Separate Redis databases for different purposes
# REDIS_CACHE_URL=redis://localhost:6379/1
# REDIS_CELERY_URL=redis://localhost:6379/2

# -----------------------------------------------------------------------------
# CORS (Frontend Origins)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Access token lifetime in seconds (default: 900 = 15 minutes)
JWT_ACCESS_TOKEN_LIFETIME=900

# Refresh token lifetime in seconds (default: 604800 = 7 days)
JWT_REFRESH_TOKEN_LIFETIME=604800

# JWT algorithm (HS256, RS256, ES256)
JWT_ALGORITHM=HS256

# -----------------------------------------------------------------------------
# Email (Optional)
# -----------------------------------------------------------------------------
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-password
# DEFAULT_FROM_EMAIL=noreply@example.com

# -----------------------------------------------------------------------------
# Storage (Optional - S3/MinIO)
# -----------------------------------------------------------------------------
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_ENDPOINT_URL=http://localhost:9000  # For MinIO

# -----------------------------------------------------------------------------
# Observability (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx

# OpenTelemetry endpoint for tracing
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# -----------------------------------------------------------------------------
# Multi-tenancy Settings
# -----------------------------------------------------------------------------
# Default invitation expiration in days
INVITATION_EXPIRY_DAYS=7

# Maximum members per organization (0 = unlimited)
MAX_MEMBERS_PER_ORG=0

# Default plan for new organizations
DEFAULT_ORG_PLAN=free

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# FEATURE_FLAG_BACKEND=database  # database, redis, launchdarkly
# LAUNCHDARKLY_SDK_KEY=your-sdk-key
